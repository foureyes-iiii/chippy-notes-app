<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chippy QuickNote</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <a class="navbar-brand">
                        Chippy Digital
                    </a>
                    <li class="nav-item">
                        <!-- Navbar Items -->
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
            <!-- Add a button to toggle the sidebar on small screens -->
            <button class="btn btn-primary d-md-none" type="button" data-toggle="collapse" data-target=".sidebar">
                Toggle Sidebar
            </button>

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h2>QuickNote</h2>
            </div>
            <div class="card">
                <div class="card-header">
                    Notes
                </div>
                <div class="card-body" id="note-window">
                    <!-- Notes should appear here -->
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <input type="text" class="form-control" id="note-input" placeholder="Enter note here...">
                        <button class="btn btn-primary" id="note-submit">Submit</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get elements
        const noteInput = document.getElementById("note-input");
        const noteSubmitButton = document.getElementById("note-submit");
        const noteWindow = document.getElementById("note-window");

        // Function to add a new note
        function addNewNote() {
            // Get the value of the input field
            const newNoteText = noteInput.value;

            // Check if the input is not empty
            if (newNoteText.trim() !== "") {
                // Create a new note element
                const newNote = document.createElement("div");
                newNote.className = "note";
                newNote.innerHTML = `
                    <div class="nickname">John Doe</div>
                    <div class="message border rounded p-3">
                        ${newNoteText}
                    </div>
                `;

                // Append the new note to the note window
                noteWindow.appendChild(newNote);

                // Clear the input field
                noteInput.value = "";
            }
        }

        // Add click event listener to the submit button
        noteSubmitButton.addEventListener("click", addNewNote);

        // Add key press event listener to the input box
        noteInput.addEventListener("keypress", function (event) {
            // Check if the pressed key is Enter (key code 13)
            if (event.key === "Enter") {
                // Prevent the default behavior of the Enter key (form submission)
                event.preventDefault();

                // Add a new note
                addNewNote();
            }
        });
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
